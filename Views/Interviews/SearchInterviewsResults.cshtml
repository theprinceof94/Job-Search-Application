@model IEnumerable<JobSearchWebAppWilliams.Models.Interview>

@{
    ViewBag.Title = "SearchInterviewsResults";
}

<h2>SearchInterviewsResults(@ViewBag.ApplicantID)</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.JobPosting.JobPostingID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Representative.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Availability)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InterviewDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndTime)
        </th>
        <th>
            Company Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.JobPosting.JobPostingID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Representative.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Availability)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InterviewDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Representative.Company.CompanyName)
        </td>
        <td>
            @Html.ActionLink("Request Interview", "RequestInterview", new { controller="ApplicantInterviews",id=item.InterviewID })
        </td>
    </tr>
}

</table>
